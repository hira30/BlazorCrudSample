@page "/books"
@inject BookDbContext Context
@* @inject NavigationManager NavigationManager *@
@attribute [StreamRendering]

<PageTitle>Books</PageTitle>

<h3>Books</h3>

@if (books.Count == 0)
{
    <p><em>Loading ...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>タイトル</th>
                <th>著者</th>
                <th>出版社</th>
                <th>出版年</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in books)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Publisher</td>
                    <td>@book.PublishedYear</td>
                    <td><a href="edit-game/@book.Id">編集</a></td>
                    <td><a href="edit-game/@book.Id">削除</a></td>
                </tr>
            }
        </tbody>
    </table>
}

<button class="btn btn-primary">追加</button>

